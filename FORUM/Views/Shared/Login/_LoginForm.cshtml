
@using FORUM.Contracts;
@model UserRequest;

<form asp-action="LoginUser" asp-controller="Login" method="post" class="ui large form">
    <div class="ui raised very padded text container segment" style="max-width: 450px; margin-top: 80px;">
        <h2 class="ui teal header center aligned">
            <i class="sign in alternate icon"></i>
            <div class="content">Вход в систему</div>
        </h2>

        <div class="field">
            <label>Имя пользователя</label>
            <div class="ui left icon input">
                <i class="user icon"></i>
                <input type="text" name="name" placeholder="Введите имя" required maxlength="15"/>
            </div>
        </div>

        <div class="field">
            <label>Пароль</label>
            <div class="ui left icon input">
                <i class="lock icon"></i>
                <input type="password" name="password" placeholder="Введите пароль" required />
            </div>
        </div>

        <button type="submit" class="ui fluid large teal button">Войти</button>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
        {
            <div class="ui negative message" style="margin-top: 15px;">
                <i class="exclamation triangle icon"></i>
                @ViewBag.ErrorMessage
            </div>
        }

        <div class="ui message" style="margin-top: 20px;">
            Нет аккаунта? <a asp-action="RegisterView" asp-controller="Login">Зарегистрируйтесь</a>
        </div>
    </div>
</form>