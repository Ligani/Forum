<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.5.0/dist/semantic.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.5.0/dist/semantic.min.js"></script>

</head>
<body>
    <header class="ui borderless menu" style="background-color: #00b5ad; color: white; padding: 10px 0;">
        <div class="ui container">
            <!-- Логотип / Название -->
            <a href="/" class="header item" style="color: white; font-size: 1.3em;">
                <i class="comments icon"></i>
                <strong>Forum</strong>
            </a>

            <!-- Основное меню -->
            <nav class="ui secondary menu" style="background: transparent; margin-left: 20px;">
                @if (User.Identity.IsAuthenticated)
                {
                    <partial name="Profile/_GoToProfile"/>

                    <a asp-controller="Main" asp-action="Index"
                       class="item"
                       style="padding: 0; margin: 0; margin-left: 15px; background: transparent; border: none; color: white; font-size: 1em; cursor: pointer;">
                        <i class="home icon"></i> Главная
                    </a>
                }
                else
                {
                    <span class="item"
                          style="padding: 0; margin: 0; margin-left: 15px; background: transparent; border: none; color: white; font-size: 1em; cursor: pointer;">
                        Добро пожаловать!
                    </span>
                }
            </nav>


            @if (User.Identity.IsAuthenticated)
            {
                <div class="right menu">
                    <partial name="Login/_LogoutForm" />
                </div>
            }
        
        </div>
    </header>
    <div>
        @RenderBody()
    </div>
</body>
</html>
